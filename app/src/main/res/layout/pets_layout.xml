<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/goToEdit"
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/nameHold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="24sp"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/breedHold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="Brand"/>

    </LinearLayout>

    <TextView
        android:id="@+id/quan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="W"
        android:layout_marginRight="15dp"
        android:textSize="24sp"
        app:layout_constraintRight_toRightOf="@+id/goToEdit"
        app:layout_constraintTop_toTopOf="@+id/goToEdit"
        app:layout_constraintBottom_toBottomOf="@+id/goToEdit"/>

</androidx.constraintlayout.widget.ConstraintLayout>